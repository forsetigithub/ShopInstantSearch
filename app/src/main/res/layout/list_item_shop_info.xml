<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/arrival_code"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/std_space"
        android:layout_marginBottom="@dimen/std_space"
        android:text="@string/shopname_test"
        app:layout_constraintBottom_toBottomOf="@id/address1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/address1"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="@dimen/std_space"
        android:layout_marginTop="@dimen/std_space"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/arrival_code"
        tools:text="@string/address1_test" />


